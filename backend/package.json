{
  "name": "bounties",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/semantic-ui-css"
    ]
  },
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "12.3.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "prepare": "cd .. && husky install ./backend/.husky && husky set ./backend/.husky/pre-commit \"npx lint-staged\""
  },
  "repository": "https://github.com/opensquare-network/bounties.git",
  "author": "OpenSquare <https://www.opensquare.network/>"
}
